# ============================================
# MARIADB OPTIMIZADO PARA MÁXIMO RENDIMIENTO
# ============================================

[mysqld]
# Configuración básica
user = mysql
pid-file = /var/run/mysqld/mysqld.pid
socket = /var/run/mysqld/mysqld.sock
port = 3306
basedir = /usr
datadir = /var/lib/mysql
tmpdir = /tmp
lc-messages-dir = /usr/share/mysql

# Charset optimizado para español
character-set-server = utf8
collation-server = utf8_spanish_ci
init-connect = 'SET NAMES utf8'

# ============================================
# OPTIMIZACIONES DE RENDIMIENTO
# ============================================

# InnoDB optimizado para máximo rendimiento
innodb_buffer_pool_size = 512M
innodb_log_file_size = 128M
innodb_log_buffer_size = 32M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT
innodb_file_per_table = 1
innodb_open_files = 400
innodb_io_capacity = 400
innodb_read_io_threads = 8
innodb_write_io_threads = 8
innodb_thread_concurrency = 16
innodb_lock_wait_timeout = 120
innodb_rollback_on_timeout = 1

# MyISAM optimizado
key_buffer_size = 256M
myisam_sort_buffer_size = 128M
myisam_max_sort_file_size = 2G
myisam_repair_threads = 1

# Query Cache optimizado
query_cache_type = 1
query_cache_size = 64M
query_cache_limit = 2M
query_cache_min_res_unit = 2k

# Conexiones optimizadas
max_connections = 200
max_connect_errors = 1000
thread_cache_size = 50
thread_stack = 256K
thread_concurrency = 16

# Buffers optimizados
sort_buffer_size = 4M
read_buffer_size = 2M
read_rnd_buffer_size = 16M
bulk_insert_buffer_size = 64M
join_buffer_size = 8M

# Tablas temporales optimizadas
tmp_table_size = 64M
max_heap_table_size = 64M

# Tabla de archivos optimizada
table_open_cache = 4000
table_definition_cache = 1000

# Timeouts optimizados
wait_timeout = 600
interactive_timeout = 600
connect_timeout = 60
net_read_timeout = 120
net_write_timeout = 120

# Logging optimizado para rendimiento
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2
log_queries_not_using_indexes = 0

# Binlog optimizado
expire_logs_days = 7
max_binlog_size = 100M
binlog_cache_size = 1M

# Optimizaciones adicionales
skip-name-resolve
skip-external-locking
back_log = 100
max_allowed_packet = 64M
net_buffer_length = 32K

# Configuración de seguridad
bind-address = 0.0.0.0

[mysql]
default-character-set = utf8

[mysqldump]
quick
quote-names
max_allowed_packet = 64M

[client]
default-character-set = utf8